## The control layer is primary meant for keybindings related to secondary window manager
# functionality and custom application launchers/menus.

# open url in the clipboard with mpv (must be supported by mpv ytdl extension)
set $url_prompt fuzzel -d --prompt-only 'url> '
set $ympv_url_menu $url_prompt | xargs -r swaymsg exec -- mpv --wayland-app-id=ytv --profile=ytv
set $ympv_url_clip wl-paste | xargs -r swaymsg exec -- mpv --wayland-app-id=ytv --profile=ytv

# Reload the configuration file
bindsym $mod+Control+c reload

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Control+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

# lock toggle
set $lock swaylock
bindsym $mod+Control+q exec $lock

# Window mover mode
include $subcfgs/mode-mover
bindsym $mod+Control+w mode $move_mode

# Resize mode keybinds
include $subcfgs/resize-mode
bindsym $mod+Control+r mode $resize_mode

# Toggle session manager menu
set $sessman ~/.config/sway/sessionman.sh
bindsym $mod+Control+Escape exec $sessman

# 1password dmenu grabber
set $dm1pass ~/bin/hyprkit/fz1p
bindsym $mod+Control+o $dm1pass

# screenshots select
set $screenclip ~/bin/grimsel
bindsym $mod+Control+p exec $screenclip

# Dark/light mode switcher script
bindsym $mod+Control+l exec ~/bin/themer.py light; reload
bindsym $mod+Control+Shift+l exec ~/bin/themer.py dark; reload

# prompt for url to open in mpv
bindsym $mod+Control+v exec $ympv_url_menu
bindsym $mod+Control+Shift+v exec $ympv_url_clip

# Select windows from scratchpad with fuzzel menu
set $scratchmenu ~/bin/dm-scratchmenu
bindsym $mod+Control+Tab exec $scratchmenu

